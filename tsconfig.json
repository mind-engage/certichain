{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "lib": ["ES2020"],
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "dist",
      "skipLibCheck": true,
      "types": ["node", "hardhat"]
    },
    "include": [
      "hardhat.config.ts",
      "scripts/**/*.ts",
      "oracle/**/*.ts",
      "test/**/*.ts",
      "typechain-types/**/*.ts"
    ],
    "exclude": ["node_modules", "frontend"]
  }